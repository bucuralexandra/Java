<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #404552;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.presentationLayer.CompositeProductController">
   <children>
      <TextField fx:id="nameText" layoutX="226.0" layoutY="58.0" text="Title of the product " />
      <Button fx:id="addButton" layoutX="22.0" layoutY="313.0" mnemonicParsing="false" onAction="#button_onClicked" style="-fx-background-color: #7c818c;" text="Create item" textFill="WHITE" />
      <Button fx:id="moreItemButton" layoutX="22.0" layoutY="280.0" mnemonicParsing="false" onAction="#button_onClicked" style="-fx-background-color: #7c818c;" text="Add more items" textFill="WHITE" />
      <Label layoutX="234.0" layoutY="20.0" text="Composite item" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TableView fx:id="itemsTable" layoutX="22.0" layoutY="100.0" prefHeight="154.0" prefWidth="519.0">
        <columns>
          <TableColumn fx:id="col1" prefWidth="75.0" text="Name" />
          <TableColumn fx:id="col2" prefWidth="75.0" text="Rating" />
            <TableColumn fx:id="col3" prefWidth="75.0" text="Calories" />
            <TableColumn fx:id="col4" prefWidth="75.0" text="Protein" />
            <TableColumn fx:id="col5" prefWidth="75.0" text="Fat" />
            <TableColumn fx:id="col6" prefWidth="75.0" text="Sodium" />
            <TableColumn fx:id="col7" prefWidth="75.0" text="Price" />
        </columns>
      </TableView>
      <TextArea fx:id="composition" layoutX="198.0" layoutY="280.0" prefHeight="117.0" prefWidth="387.0" style="-fx-background-color: #404552; -fx-control-inner-background: #404552;" />
      <Button fx:id="backButton" layoutX="22.0" layoutY="360.0" mnemonicParsing="false" onAction="#back" style="-fx-background-color: #7c818c;" text="Back" textFill="WHITE" />
   </children>
</AnchorPane>
